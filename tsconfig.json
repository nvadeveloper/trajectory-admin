{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "ES6"],
        "module": "ES6",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "ES6",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": ["./src/@types", "./node_modules/@types"],
        "strict": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
